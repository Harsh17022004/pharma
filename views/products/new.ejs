<% layout("/layouts/boilerplate.ejs") %>

<body>
  <div class="row mt-4">
    <div class="col-6 offset-3">
      <form
        action="/products"
        method="post"
        class="needs-validation"
        novalidate
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="name" class="form-label">Product Name</label>
          <input
            type="text"
            class="form-control"
            id="name"
            placeholder="Himalya Gasex"
            name="product[p_name]"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please Enter Name</div>
        </div>
        <div class="row">
          <div class="mb-3 col-md-6">
            <label for="qyt" class="form-label">Product Qyt information</label>
            <input
              type="text"
              class="form-control"
              id="qyt"
              placeholder="bottle of 100tabs"
              name="product[p_qyt]"
              required
            />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please Enter Pack Qyt.</div>
          </div>
          <div class="mb-3 col-md-6">
            <label for="price" class="form-label">Price</label>
            <input
              type="text"
              class="form-control"
              id="price"
              placeholder="Enter MRP"
              name="product[mrp]"
              required
            />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please Enter Price</div>
          </div>
        </div>
        <div class="row">
          <div class="mb-3 col-md-6">
            <label for="e-date" class="form-label">Expiry Date</label>
            <input
              type="date"
              class="form-control"
              id="e-date"
              placeholder="Please enter correct Expiry Date"
              name="product[p_exp]"
              required
            />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please Enter Expiry Date</div>
          </div>
          <div class="mb-3 col-md-6">
            <label for="img" class="form-label">Upload Image</label>
            <input
              type="file"
              class="form-control"
              id="img"
              name="product[p_img]"
              required
            />
            <div class="invalid-feedback">Please Upload Image</div>
          </div>
        </div>
        <div class="mb-3">
          <label for="desc" class="form-label"
            >Describe about your product</label
          >
          <textarea
            class="form-control"
            id="desc"
            cols="30"
            rows="10"
            name="product[p_desc]"
            required
          ></textarea>
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">
            Please Enter Description of your Product
          </div>
        </div>
        <div class="mb-3 form-check">
          <input
            type="checkbox"
            class="form-check-input"
            id="exampleCheck1"
            required
          />
          <label class="form-check-label" for="exampleCheck1"
            >I confirm all terms and conditions related to the company</label
          >
          <div class="invalid-feedback">Please Check the T&C</div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
</body>
